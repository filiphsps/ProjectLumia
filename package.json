{
    "name": "@filiphsandstrom/project-lumia",
    "description": "Windows 10 Mobile style launcher",
    "main": "node_modules/expo/AppEntry.js",
    "scripts": {
        "start": "expo start",
        "android": "expo start --android",
        "ios": "expo start --ios",
        "web": "expo start --web",
        "build": "npm-run-all build:*",
        "build:android": "expo build:android",
        "test": "npm-run-all test:*",
        "test:jest": "jest --passWithNoTests",
        "lint": "npm-run-all lint:*",
        "lint:prettier": "prettier --config .prettierrc **/*.tsx --check",
        "format": "npm-run-all format:*",
        "format:prettier": "prettier --config .prettierrc **/*.tsx --write"
    },
    "dependencies": {
        "@types/styled-components-react-native": "5.1.3",
        "axios": "0.27.1",
        "expo": "42.0.4",
        "expo-constants": "13.0.2",
        "expo-haptics": "11.1.1",
        "expo-localization": "12.0.1",
        "expo-notifications": "0.14.1",
        "i18n-js": "3.9.2",
        "moment": "2.29.3",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "react-native": "https://github.com/expo/react-native/archive/sdk-42.0.0.tar.gz",
        "react-native-draggable-grid": "^2.1.4",
        "react-native-easy-grid": "^0.2.2",
        "react-native-super-grid": "^4.1.3",
        "styled-components": "5.3.5",
        "swr": "1.3.0"
    },
    "devDependencies": {
        "@babel/core": "7.17.9",
        "@expo/vector-icons": "13.0.0",
        "@types/enzyme": "3.10.12",
        "@types/i18n-js": "3.8.2",
        "@types/jest": "27.4.1",
        "@types/react": "18.0.8",
        "@types/react-native": "0.67.6",
        "babel-preset-expo": "9.0.2",
        "enzyme": "3.11.0",
        "husky": "4.3.8",
        "jest": "28.0.1",
        "jest-expo": "44.0.1",
        "jest-expo-enzyme": "1.2.5",
        "npm-run-all": "4.1.5",
        "prettier": "2.6.2",
        "typescript": "4.6.3",
        "yarnhook": "0.5.1"
    },
    "husky": {
        "hooks": {
            "post-checkout": "yarnhook",
            "post-merge": "yarnhook",
            "post-rewrite": "yarnhook",
            "pre-commit": "npm run test && npm run lint"
        }
    },
    "jest": {
        "projects": [
            {
                "preset": "jest-expo/ios"
            },
            {
                "preset": "jest-expo/android"
            }
        ]
    }
}
